.hero
    .container
        h1 {{ "choose your design style" | translate | titleize }}
.container
    div(*ngIf="!browserSupport")
        .row
            .col-xs-12
                .alert.alert-danger #[strong Unsupported Browser:] Your browser is not supported. Please download the latest #[a(href="https://www.google.com/chrome/browser/desktop/index.html") Google Chrome] or #[a(href="http://www.opera.com/download") Opera] browser on desktop to use this website. You can still try this website, but you might encounter unexpected behaviours and not be able to download the final poster.
    div(*ngIf="!designList") Loading...
    div(*ngFor='let group of designList')
        .row
            .col-xs-12
                h2 {{ group.title[translate.currentLang] }}
                p {{ group.description[translate.currentLang] }}
        .row
            .col-md-4(*ngFor='let design of group.designs')
                .panel.panel-default
                    .panel-heading {{ design.title[translate.currentLang] }}
                    .panel-body
                        img.img-responsive(
                            [attr.src]="getDesignThumbnail(design.designID)", 
                            [routerLink]="['/editor', group.groupID, design.designID]",
                            (error)="$event.target.src = '/assets/no-preview.svg'")
                    .panel-footer
                        a.btn.btn-go.btn-block([routerLink]="['/editor', group.groupID, design.designID]")  {{ "choose this design" | translate | titleize }}